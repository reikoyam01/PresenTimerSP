<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal" android:layout_marginTop="20dip">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dip" android:id="@+id/textView1" android:text="@string/allotted" android:layout_marginRight="8dip"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_margin="4dip" android:layout_width="wrap_content" android:textSize="28dip" android:id="@+id/txtAllottedMin" android:text="000"></TextView>
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="28dip" android:id="@+id/txtAllottedSec" android:text="00" android:layout_marginRight="8dip"></TextView>
    <Button android:layout_height="fill_parent" android:text="&lt;" android:layout_width="60dip" android:id="@+id/btnDown"></Button>
    <Button android:layout_height="fill_parent" android:text="&gt;" android:layout_width="60dip" android:id="@+id/btnUp"></Button>
    <Button android:textSize="20dip" android:layout_height="60dip" android:text="START" android:id="@+id/btnStart" android:layout_width="120dip" android:layout_marginLeft="8dip"></Button>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayoutRest" android:layout_margin="10dip" android:gravity="center_vertical|center_horizontal" android:background="@android:color/white">
    <TextView android:layout_height="wrap_content" android:id="@+id/txtRestMin" android:layout_width="wrap_content" android:textSize="80dip" android:layout_marginLeft="10dip" android:text="00" android:textColor="@android:color/black"></TextView>
    <TextView android:layout_height="wrap_content" android:id="@+id/txtRestSec" android:layout_width="wrap_content" android:text="00" android:textSize="40dip" android:layout_marginLeft="10dip" android:textColor="@android:color/black"></TextView>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayoutPassed" android:gravity="center_vertical|center_horizontal" android:layout_marginTop="12dip">
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dip" android:text="Passed  "></TextView>
    <Chronometer android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chronometer" android:id="@+id/chronometer1" android:textSize="28dip"></Chronometer>
</LinearLayout>
</LinearLayout>
